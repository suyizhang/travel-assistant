# OpenAI API 配置（使用智谱 GLM 时填写智谱的 key 和 base_url）
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4/

# 模型配置
MODEL_NAME=glm-4.6

# 服务端口
PORT=712

# ===== 安全配置 =====

# API Key（Postman/curl 调试用，小程序端使用微信登录）
API_KEY=your-secret-key

# 微信小程序配置（微信公众平台 -> 开发管理 -> 开发设置）
WX_APPID=your-wx-appid
WX_SECRET=your-wx-secret

# GitHub OAuth 配置（H5 登录，github.com/settings/developers -> OAuth Apps）
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Token 签名密钥（建议固定一个随机字符串，留空则每次重启自动生成）
TOKEN_SECRET=your-random-token-secret

# Token 有效期（小时，默认 168 = 7天）
TOKEN_EXPIRE_HOURS=168

# CORS 白名单（逗号分隔，留空允许所有来源）
ALLOWED_ORIGINS=https://your-domain.com

# 每用户每分钟最大请求数
RATE_LIMIT=30
